<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PDF.Converter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">#EEE9EC</item>
    </style>

    <style name="Theme.PDFConverter" parent="Base.Theme.PDF.Converter" />

    <style name="MainPageTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabPaddingStart">@dimen/_5sdp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabTextAppearance">@style/CustomTabText</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedImageSelection">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="RoundedImageSelection_7sdp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_7sdp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="WhitePopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>