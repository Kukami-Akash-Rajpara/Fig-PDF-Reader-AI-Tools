                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:fontFamily="@font/robotobold"
                  android:gravity="center"
                  android:paddingStart="@dimen/_8sdp"
                  android:paddingEnd="@dimen/_8sdp"
