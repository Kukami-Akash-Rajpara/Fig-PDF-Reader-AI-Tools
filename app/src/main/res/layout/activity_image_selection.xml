        <RelativeLayout
            android:layout_marginTop="@dimen/_14sdp"
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_button_to_pro_converter_tools"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/back_img" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toStartOf="@id/reset_selection"
                android:layout_toEndOf="@id/back_button_to_pro_converter_tools"
                android:gravity="center"
                android:text="@string/image_selection"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/reset_selection"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:adjustViewBounds="true"
                android:layout_toStartOf="@id/select_all_button"
                android:src="@drawable/resetimageselection"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/select_all_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/tickbutton" />

            <!-- <ImageView
                 android:id="@+id/imgMenu"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_alignParentEnd="true"
                 android:adjustViewBounds="true"
                 android:padding="@dimen/_8sdp"
                 android:src="@drawable/ic_menu" />-->

        </RelativeLayout>


        <!-- RecyclerView -->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_selection"
                android:nestedScrollingEnabled="false"
                android:layout_marginHorizontal="@dimen/_8sdp" />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/bottomBar"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/bottom_sheet_bg"
        android:visibility="gone"
        android:layout_gravity="bottom"
        >

        <!--   delete option from the bottom sheet     -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottom_sheet_images"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp" />
    </LinearLayout>

    <!-- Bottom bar (sticky) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:layout_gravity="bottom">

        <Spinner
            android:id="@+id/image_options"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_20sdp"
            android:spinnerMode="dialog"
            android:focusable="true"
            android:clickable="true"  />

        <TextView
            android:id="@+id/importButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:textAlignment="center"
            android:text="@string/import_button"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/importbuttonunselected" />
    </LinearLayout>


</RelativeLayout>