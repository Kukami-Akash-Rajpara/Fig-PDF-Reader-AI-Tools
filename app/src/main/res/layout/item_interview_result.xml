<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtQueCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_semi_bold"
            android:textColor="@color/color_pink_text"
            android:textSize="@dimen/_13sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_semi_bold"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:text="@string/answer1"
            android:textColor="@color/color_pink_text"
            android:textSize="@dimen/_13sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/dropdown"
                android:fontFamily="@font/roboto_semi_bold"
                android:text="@string/evaluation"
                android:textColor="@color/color_pink_text"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/dropdown"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_drop_down_arow1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:visibility="gone" />

        <!--<TextView
            android:id="@+id/txtWeaknesses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtToneFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp" />-->
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>