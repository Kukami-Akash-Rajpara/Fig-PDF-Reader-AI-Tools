<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/_4sdp"
        app:shapeAppearanceOverlay="@style/RoundedImageSelection"/>


    <!-- Overlay for selected image (for Activity) -->

    <RelativeLayout
        android:id="@+id/overlay_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/stroke_gradient"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintStart_toStartOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="@id/image_item"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/bg_count"
            android:layout_height="@dimen/_20sdp">
            <TextView
                android:id="@+id/image_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="122"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/white"
                android:visibility="visible"/>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/overlay_icon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/selectedimage"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintStart_toStartOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="@id/image_item"
        android:visibility="gone"/>

    <!-- Badge Text on top-right -->
    <TextView
        android:id="@+id/image_count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_9ssp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="@id/image_item"
        android:visibility="gone"/>
    <!-- expand button -->
    <ImageView
        android:id="@+id/expand_button"
        android:layout_width="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_height="@dimen/_24sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/expandbutton"
        android:elevation="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="@id/image_item"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>