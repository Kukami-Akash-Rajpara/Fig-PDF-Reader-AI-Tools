<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/convert_to_pdf"
            android:layout_toStartOf="@id/imgClose"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/_10sdp"
            android:alpha="0.5"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_vector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llSaveGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgRename"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_edit_name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPDFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toStartOf="@id/imgClear"
            android:hint="@string/orientation"
            android:layout_toEndOf="@id/imgRename"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2ssp"
            android:layout_below="@id/txtPDFname"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@id/imgClear"
            android:layout_toEndOf="@id/imgRename"
            android:alpha="0.5"
            android:background="@drawable/dashed_line" />

        <ImageView
            android:id="@+id/imgClear"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_clear_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llSetPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgPw"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_lock" />
        <LinearLayout
            android:layout_toStartOf="@id/imgPwEye"
            android:layout_toEndOf="@id/imgPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_medium"
                android:visibility="gone"
                android:text="@string/compression_settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgPwEye"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/imgPwSelect"
            android:layout_marginEnd="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/ic_pw_eye" />

        <ImageView
            android:id="@+id/imgPwSelect"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_square_deselect" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgMargin"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_margin" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toStartOf="@id/imgMarginSelect"
            android:layout_toEndOf="@id/imgMargin"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/white_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/imgMarginSelect"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_square_deselect" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llCompress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgCompress"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_compress" />

        <LinearLayout
            android:layout_toStartOf="@id/imgCompressNext"
            android:layout_toEndOf="@id/imgCompress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/compression_settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtCompress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/compression_settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCompressNext"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgPageSize"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_page_size" />

        <LinearLayout
            android:layout_toStartOf="@id/imgPageSizeNext"
            android:layout_toEndOf="@id/imgPageSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/pdf_page_size"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPageSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_medium"
                android:text="A4"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgPageSizeNext"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlOrientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgOrientation"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_orientation" />

        <LinearLayout
            android:layout_toStartOf="@id/imgOrientationNext"
            android:layout_toEndOf="@id/imgOrientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/orientation"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtOrientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/auto"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgOrientationNext"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rlPreview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/bg_gradient_stroke"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:padding="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/preview"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlConvert"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/btn_fill_gradient"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:padding="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/convert"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
