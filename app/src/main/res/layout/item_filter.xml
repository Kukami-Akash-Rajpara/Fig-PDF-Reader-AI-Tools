<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/_2sdp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/bg_gray_stroke"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/filterPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/RoundedImageSelection_7sdp" />

        <RelativeLayout
            android:id="@+id/rlText"
            android:layout_alignParentBottom="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <!-- <com.eightbitlab.com.blurview.BlurView
                android:id="@+id/blurBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp">-->

            <TextView
                android:id="@+id/filterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:textColor="@color/black"
                android:text="ABC"
                android:background="#3AA0A0A0"
                android:textSize="@dimen/_11sdp" />
<!--
            </com.eightbitlab.com.blurview.BlurView>
-->


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>

