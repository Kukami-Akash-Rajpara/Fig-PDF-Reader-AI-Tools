<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FullScreenImageActivity">

    <!-- Main vertical content: top bar + RecyclerView -->
    <!-- Top bar -->
    <RelativeLayout
        android:id="@+id/image_gallery_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_to_image_selection_activity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/back_img" />

        <TextView
            android:id="@+id/image_slide_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:singleLine="true"
            android:text=""
            android:layout_toStartOf="@id/llRight"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/back_to_image_selection_activity"
            android:textSize="@dimen/_14ssp"/>

        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_13ssp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="@string/select" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/custom_checkbox"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:button="@null"
                android:background="@drawable/custom_checkbox_selector"
                app:buttonTint="@null"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/full_screen_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_above="@id/bottom_sheet_gallery"
        android:layout_below="@+id/image_gallery_header"/>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/bottomBar"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/bottom_sheet_bg"
        android:visibility="gone"
        android:layout_gravity="bottom">

        <!--   delete option from the bottom sheet     -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_sheet_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp" />

    </LinearLayout>

    <!-- Bottom bar (sticky) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:gravity="bottom">

        <!-- Spacer to push the import button to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Import Button -->
        <TextView
            android:id="@+id/importButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:textAlignment="center"
            android:text="@string/import_button"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/importbuttonunselected" />
    </LinearLayout>
</RelativeLayout>