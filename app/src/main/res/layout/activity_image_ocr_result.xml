<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImageOcrResult"
    android:background="@drawable/bg_main_screen">

    <LinearLayout
        android:id="@+id/response_process_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/busy_animation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_wait"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginBottom="@dimen/_8sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="@string/please_wait_while_we_process"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/text_not_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTryAgain"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/white"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:adjustViewBounds="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/animation_not_found_2"
                app:lottie_repeatMode="restart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/animation_not_found_1"
                    app:lottie_repeatMode="restart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/no_word_found"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/we_could_not_find"
                    android:textColor="#80000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtTryAgain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/importbutton"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/try_again"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_button_to_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/back_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/scan_result"
            android:textColor="#DE000000"
            android:textSize="@dimen/_14ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:id="@+id/edit_button"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:src="@drawable/ic_edit_button"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/confirm_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done_button"
            android:textColor="@color/dark_pink_color"
            android:background="@drawable/bg_gradient_stroke"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_14sdp"
            android:fontFamily="@font/roboto_bold"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_white_10dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ocrResultEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edit_text_hint"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:overScrollMode="ifContentScrolls"
                android:lineSpacingExtra="2dp"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:singleLine="false"
                android:padding="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/copyButton"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:src="@drawable/icon_copy_summarizer"
                android:padding="@dimen/_6sdp"
                android:layout_gravity="bottom|end" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/downloadPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_pdf_text"
        android:textSize="@dimen/_12ssp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="@dimen/_24sdp"
        android:layout_gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/btn_fill_gradient"/>
</LinearLayout>