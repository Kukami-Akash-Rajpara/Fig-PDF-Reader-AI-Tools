<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OcrCapturedImage"
    android:background="@drawable/bg_main_screen">


        <!-- Left: Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_button_to_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/back_img" />


    <!-- Fullscreen Captured Image -->

    <ImageView
        android:id="@+id/ocrCapturedImage"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:orientation="horizontal"
        android:gravity="bottom" >

        <!-- 4 tools equally spaced -->
        <LinearLayout
            android:id="@+id/tool_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_alignParentStart="true" >

            <!-- Crop button -->
            <LinearLayout
                android:id="@+id/zoom_in_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_zoomin"
                    app:tint="@color/crop_icon_tint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom_in"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/crop_text_selector"/>

            </LinearLayout>

            <!-- doodle button -->
            <LinearLayout
                android:id="@+id/zoom_out_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_zoomout"
                    app:tint="@color/crop_icon_tint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom_out"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/crop_text_selector"/>
            </LinearLayout>

            <!-- filter button -->
            <LinearLayout
                android:id="@+id/retake_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_redo"
                    app:tint="@color/crop_icon_tint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retake"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/crop_text_selector"/>
            </LinearLayout>


            <!-- Done button aligned to right -->
            <TextView
                android:id="@+id/done_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/done_button"
                android:textColor="@color/dark_pink_color"
                android:background="@drawable/bg_gradient_stroke"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>