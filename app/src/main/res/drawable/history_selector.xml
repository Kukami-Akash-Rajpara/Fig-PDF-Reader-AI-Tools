<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active state → pink circle + icon -->
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/bottom_menu_active"/>
            <item android:drawable="@drawable/history" android:gravity="center"/>
        </layer-list>
    </item>

    <!-- Inactive state → normal icon -->
    <item android:drawable="@drawable/history"/>
</selector>