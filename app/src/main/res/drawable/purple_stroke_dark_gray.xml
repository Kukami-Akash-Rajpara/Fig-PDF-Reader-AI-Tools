<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Outer gradient border -->
<item>
    <shape android:shape="rectangle">
        <gradient
            android:angle="45"
            android:endColor="#744099"
            android:startColor="#C26BFF" />
        <corners android:radius="@dimen/_7sdp" />
    </shape>
</item>

<!-- Inner white background (creates border effect) -->
<item
    android:bottom="@dimen/_1sdp"
    android:left="@dimen/_1sdp"
    android:right="@dimen/_1sdp"
    android:top="@dimen/_1sdp">
    <shape android:shape="rectangle">
        <solid android:color="#EAE6E8" />
        <corners android:radius="@dimen/_6sdp" />
    </shape>
</item>

</layer-list>

