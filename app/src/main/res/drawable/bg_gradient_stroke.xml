<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer gradient border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#BF496A"
                android:startColor="#F975CD" />
            <corners android:radius="@dimen/_7sdp" />
        </shape>
    </item>

    <!-- Inner white background (creates border effect) -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>

</layer-list>
